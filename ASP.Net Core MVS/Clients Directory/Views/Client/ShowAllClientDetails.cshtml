@model List<ClientService_MVC.Models.ClientInfo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>All Client Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>All Client Details</h2>

        <a href="/Clients/Add" class="btn btn-primary mb-3">Add New Client</a>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Client ID</th>
                    <th>Company Name</th>
                    <th>Website</th>
                    <th>Email</th>
                    <th>Category</th>
                    <th>Standard</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.ClientId</td>
                        <td>@client.CompanyName</td>
                        <td><a href="@client.WebUrl" target="_blank">Visit</a></td>
                        <td>@client.Email</td>
                        <td>@client.Category</td>
                        <td>@client.Standard</td>
                        <td>
                            <a href="/Clients/ById/@client.ClientId" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>