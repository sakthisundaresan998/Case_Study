@model List<ClientService_MVC.Models.ClientInfo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html>
<head>
    <title>Clients by Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Clients in Category: @Model.FirstOrDefault()?.Category</h2>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Client ID</th>
                    <th>Company Name</th>
                    <th>Website</th>
                    <th>Email</th>
                    <th>Standard</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.ClientId</td>
                        <td>@client.CompanyName</td>
                        <td><a href="@client.WebUrl" target="_blank">Visit</a></td>
                        <td>@client.Email</td>
                        <td>@client.Standard</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Clients/ShowAll" class="btn btn-primary">Back to All Clients</a>
    </div>
</body>
</html>