@model ClientService_MVC.Models.ClientInfo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<!DOCTYPE html>
<html>
<head>
    <title>Client by Email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Client Details</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Email</h5>
                <p class="card-text">
                    <strong>Client ID:</strong> @Model.ClientId<br>
                    <strong>Company Name:</strong> @Model.CompanyName<br>
                    <strong>Website:</strong> <a href="@Model.WebUrl" target="_blank">@Model.WebUrl</a><br>
                    <strong>Category:</strong> @Model.Category<br>
                    <strong>Standard:</strong> @Model.Standard
                </p>
                <a href="/Clients/ShowAll" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>