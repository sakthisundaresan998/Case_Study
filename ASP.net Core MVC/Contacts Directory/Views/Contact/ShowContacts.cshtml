@model List<ContactsDirectory.Models.ContactInfo>

<h2>All Contacts</h2>
<table class="table table-bordered table-hover mt-3">
    <thead class="table-light">
        <tr>
            <th>Contact Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company Name</th>
            <th>Email Id</th>
            <th>Mobile No</th>
            <th>Designation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.ContactId</td>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.CompanyName</td>
                <td>@contact.EmailId</td>
                <td>@contact.MobileNo</td>
                <td>@contact.Designation</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Contact/AddContact" class="btn btn-success">Add New Contact</a>
</div>
